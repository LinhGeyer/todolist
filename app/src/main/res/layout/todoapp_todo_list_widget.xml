<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"> <!-- Add padding to the root layout -->

    <!-- Title -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todo List"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" /> <!-- Reduced margin for better spacing -->

    <!-- Task List -->
    <TextView
        android:id="@+id/widget_task_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tasks will appear here"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/widget_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" /> <!-- Increased margin to separate from title -->

    <!-- Refresh Button -->
    <Button
        android:id="@+id/widget_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:layout_below="@id/widget_task_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" /> <!-- Position below the task list -->
</RelativeLayout>